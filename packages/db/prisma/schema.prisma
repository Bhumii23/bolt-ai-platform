generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
 
 
}

model User{
  id          String       @id @default(uuid())
  email       String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Project{
  id          String       @id @default(uuid())
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  prompt      Prompt[]
  userId      String
  actions     Action[]
}


model Prompt{
  id          String       @id @default(uuid())
  content     String
  type        PromptType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  project     Project      @relation(fields:[projectId],references:[id])
  projectId   String
}
model Action{
id          String       @id @default(uuid())
createdAt   DateTime     @default(now())
updatedAt   DateTime     @updatedAt
content     String
project     Project      @relation(fields:[projectId],references:[id])
projectId   String
}
enum PromptType{
  USER
  SYSTEM
}
